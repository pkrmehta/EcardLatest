<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/myDark"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">


    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Phone"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:fontFamily="@font/balooda_semibold"/>

    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">


        <com.jaredrummler.materialspinner.MaterialSpinner
            android:background="?attr/selectableItemBackgroundBorderless"
            app:ms_background_color="@color/myDark"
            android:textColor="@android:color/white"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/popupPhone_phoneSpinner"/>




        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:id="@+id/popupPhone_phoneTIL"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="none"
            app:helperTextTextAppearance="@color/colorAccent"
            android:textColorHint="@color/colorOnBackground"
            android:layout_marginHorizontal="20dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/popupPhone_phoneEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:textSize="15dp"
                app:boxBackgroundColor="@color/myDark"
                android:textColorHint="@color/colorOnBackgroundSDark"
                android:textColor="@android:color/white"
                android:padding="15dp"
                android:inputType="phone"
                android:maxLength="10"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/popupPhone_cancelButton"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myinfo_layoutback"
            android:text="Cancel"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingVertical="3dp"
            android:fontFamily="@font/balooda_semibold"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/popupPhone_saveButton"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myinfo_layoutback"
            android:text="Save"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingVertical="3dp"
            android:fontFamily="@font/balooda_semibold"
            android:textSize="15dp"/>




    </LinearLayout>


</LinearLayout>