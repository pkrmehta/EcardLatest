<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/myDark"
    tools:context=".AddContact">

    <include
        layout="@layout/toolbar_add_contact"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nice to see you,"
                android:textColor="#9F9F9F"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/balooda_regular"/>

            <TextView
                android:id="@+id/addContact_nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parshant"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:textColor="@color/myOrange"
                android:fontFamily="@font/balooda_semibold"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="10dp"
                app:cardCornerRadius="14dp">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:background="@color/myDarkLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="50dp"
                    android:paddingVertical="30dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/addContact_qrImage"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/tempqr"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Show QR to Connect"
                        android:textColor="#9F9F9F"
                        android:textSize="16dp"/>



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="#9F9F9F"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/addContact_scanButton"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="10dp"
                app:cardCornerRadius="14dp">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:background="@color/myDarkLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="50dp"
                    android:paddingVertical="30dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/scanner"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Show to Add"
                        android:textColor="#9F9F9F"
                        android:textSize="16dp"/>



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/addContact_sendDirectButton"
                android:layout_marginBottom="30dp"
                android:clickable="true"
                app:contentPadding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/myDarkLight"
                android:layout_marginHorizontal="70dp"
                app:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send Direct Invite"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"
                    android:fontFamily="@font/balooda_semibold"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>



</LinearLayout>