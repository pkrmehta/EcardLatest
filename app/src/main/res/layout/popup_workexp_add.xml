<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/myDark"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Work Experience"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:fontFamily="@font/balooda_semibold"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/popupWork_employerTIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="none"
        app:helperTextTextAppearance="@color/colorAccent"
        android:textColorHint="@color/colorOnBackground"
        android:layout_marginHorizontal="70dp">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/popupWork_employerEdiText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Employer"
            app:boxBackgroundColor="@color/myDark"
            android:textColorHint="@color/colorOnBackgroundSDark"
            android:textColor="@color/myOrange"
            android:padding="20dp"
            android:inputType="text"
            android:maxLines="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/popupWork_profileTIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="none"
        app:helperTextTextAppearance="@color/colorAccent"
        android:textColorHint="@color/colorOnBackground"
        android:layout_marginHorizontal="70dp">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/popupWork_profileEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Profile"
            app:boxBackgroundColor="@color/myDark"
            android:textColorHint="@color/colorOnBackgroundSDark"
            android:textColor="@color/myOrange"
            android:padding="20dp"
            android:inputType="text"
            android:maxLines="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/popupWork_startDateTIL"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="none"
            app:helperTextTextAppearance="@color/colorAccent"
            android:textColorHint="@color/colorOnBackground">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/popupWork_startDateEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:hint="Start Date"
                app:boxBackgroundColor="@color/myDark"
                android:textColorHint="@color/colorOnBackgroundSDark"
                android:textColor="@color/myOrange"
                android:padding="20dp"
                android:inputType="text"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/popupWork_endDateTIL"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="none"
            android:layout_marginHorizontal="20dp"
            app:helperTextTextAppearance="@color/colorAccent"
            android:textColorHint="@color/colorOnBackground">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/popupWork_endDateEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="End Date"
                app:boxBackgroundColor="@color/myDark"
                android:textColorHint="@color/colorOnBackgroundSDark"
                android:textColor="@color/myOrange"
                android:padding="20dp"
                android:inputType="text"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>






    </LinearLayout>

    <RelativeLayout
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Present?"/>

            <CheckBox
                android:id="@+id/popupWork_presentCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/popupWork_cancelButton"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myinfo_layoutback"
            android:text="Cancel"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingVertical="7dp"
            android:fontFamily="@font/balooda_semibold"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/popupWork_saveButton"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myinfo_layoutback"
            android:text="Save"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingVertical="7dp"
            android:fontFamily="@font/balooda_semibold"
            android:textSize="18dp"/>




    </LinearLayout>


</LinearLayout>