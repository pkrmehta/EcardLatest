<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/myDark"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Website/Blogs"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:fontFamily="@font/balooda_semibold"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="20dp"
        android:id="@+id/popupWebsite_websiteTIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="none"
        app:helperTextTextAppearance="@color/colorAccent"
        android:textColorHint="@color/colorOnBackground"
        android:layout_marginHorizontal="30dp">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/popupWebsite_websiteEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Link"
            android:textSize="15dp"
            app:boxBackgroundColor="@color/myDark"
            android:textColorHint="@color/colorOnBackgroundSDark"
            android:textColor="@android:color/white"
            android:padding="20dp"
            android:inputType="text"
            android:maxLines="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/popupWebsite_cancelButton"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myinfo_layoutback"
            android:text="Cancel"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingVertical="3dp"
            android:fontFamily="@font/balooda_semibold"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/popupWebsite_saveButton"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myinfo_layoutback"
            android:text="Save"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingVertical="3dp"
            android:fontFamily="@font/balooda_semibold"
            android:textSize="15dp"/>




    </LinearLayout>


</LinearLayout>