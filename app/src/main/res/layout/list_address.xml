<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:weightSum="2">

    <TextView
        android:id="@+id/listAddress_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_weight="2"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/balooda_regular"
        android:text="Vastu Vihar, JW-2, Road No - 4 "
        android:textColor="@android:color/white"
        android:textSize="15sp" />
    />

    <TextView
        android:id="@+id/listAddress_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/list_primary_back"
        android:fontFamily="@font/balooda_regular"
        android:paddingHorizontal="10dp"
        android:text="Primary"
        android:textColor="@color/myDark" />
</LinearLayout>