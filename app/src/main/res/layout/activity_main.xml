<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myDark"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/main_toolbar"
            layout="@layout/toolbar_main_activity" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/main_toolbar"
            android:layout_marginTop="-3dp"
            android:background="@color/toolbarBack" />


        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/main_basicInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ripple"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="20dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/main_myImageView"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/temp_pic" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/main_nameTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/balooda_semibold"
                                android:text="Prashant Kumar"
                                android:textColor="@android:color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/main_descTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5sp"
                                android:fontFamily="@font/balooda_regular"
                                android:text="Android Developer, E-Card"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="10dp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:id="@+id/main_phoneButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/myDarkLight"
                                android:clickable="true"
                                android:paddingVertical="30dp">

                                <ImageView
                                    android:id="@+id/main_phoneImage"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/phone" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/main_phoneImage"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="50dp"
                                    android:elevation="10dp"
                                    android:fontFamily="@font/balooda_semibold"
                                    android:text="Phone"
                                    android:textColor="@android:color/white" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="10dp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:id="@+id/main_addressButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/myDarkLight"
                                android:clickable="true"
                                android:paddingVertical="30dp">

                                <ImageView
                                    android:id="@+id/main_addressImage"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/adress" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/main_addressImage"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="50dp"
                                    android:elevation="10dp"
                                    android:fontFamily="@font/balooda_semibold"
                                    android:text="Address"
                                    android:textColor="@android:color/white" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="10dp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:id="@+id/main_emailButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/myDarkLight"
                                android:clickable="true"
                                android:paddingVertical="30dp">

                                <ImageView
                                    android:id="@+id/main_emailImage"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/email" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/main_emailImage"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="50dp"
                                    android:elevation="10dp"
                                    android:fontFamily="@font/balooda_semibold"
                                    android:text="Email"
                                    android:textColor="@android:color/white" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="10dp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:id="@+id/main_websiteButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/myDarkLight"
                                android:clickable="true"
                                android:paddingVertical="30dp">

                                <ImageView
                                    android:id="@+id/main_websiteImage"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/website" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/main_websiteImage"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="50dp"
                                    android:elevation="10dp"
                                    android:fontFamily="@font/balooda_semibold"
                                    android:text="Website"
                                    android:textColor="@android:color/white" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="?attr/actionBarSize"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="10dp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:id="@+id/main_workExpButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/myDarkLight"
                                android:clickable="true"
                                android:paddingVertical="30dp">

                                <ImageView
                                    android:id="@+id/main_workImage"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/workexperience" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/main_workImage"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="50dp"
                                    android:elevation="10dp"
                                    android:fontFamily="@font/balooda_semibold"
                                    android:text="Work Experience"
                                    android:textColor="@android:color/white" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="invisible"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="10dp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/myDarkLight"
                                android:paddingVertical="30dp">

                                <ImageView
                                    android:id="@+id/main_xImage"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/adress" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/main_xImage"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="50dp"
                                    android:elevation="10dp"
                                    android:fontFamily="@font/balooda_semibold"
                                    android:text="Address"
                                    android:textColor="@android:color/white" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </ScrollView>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">

            <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/main_bottomAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:animateLayoutChanges="true"
                android:backgroundTint="@color/toolbarBack"
                android:elevation="20dp"
                android:fadingEdgeLength="30dp"
                app:fabAlignmentMode="center"
                app:fabAttached="true">

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/main_bottomNavigationView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:background="@android:color/transparent"
                    app:itemIconTint="@color/myOrange"
                    app:itemTextAppearanceActive="@color/myOrange"
                    app:itemTextAppearanceInactive="@color/colorOnBackground"
                    app:labelVisibilityMode="unlabeled"
                    app:menu="@menu/bottom_nav_menu" />

            </com.google.android.material.bottomappbar.BottomAppBar>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/main_addContactButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plus"
                app:layout_anchor="@id/main_bottomAppBar" />


        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/main_navigationView"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/myDark"
        app:headerLayout="@layout/nav_header" />


</androidx.drawerlayout.widget.DrawerLayout>