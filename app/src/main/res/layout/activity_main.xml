<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myDark"
    android:id="@+id/main_drawer"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">





    <include
        android:id="@+id/main_toolbar"
        layout="@layout/toolbar_main_activity"/>

        <View
            android:layout_below="@id/main_toolbar"
            android:layout_marginTop="-3dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/toolbarBack"/>



    <ScrollView

        android:layout_below="@id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:layout_marginHorizontal="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="14dp">

                <LinearLayout
                    android:background="@color/myDarkLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="30dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/main_myImageView"
                        android:layout_width="100dp"
                        android:layout_height="140dp"
                        android:src="@drawable/temp_pic"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/main_nameTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Prashant Kumar"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/balooda_semibold"
                                android:textSize="18dp"/>

                            <TextView
                                android:id="@+id/main_descTextView"
                                android:layout_marginTop="5sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Android Developer, E-Card"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/balooda_regular"
                                android:textSize="15dp"/>

                    </LinearLayout>

                </LinearLayout>




            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:weightSum="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="14dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:clickable="true"
                            android:id="@+id/main_phoneButton"
                            android:paddingVertical="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/myDarkLight">

                            <ImageView
                                android:id="@+id/main_phoneImage"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/phone"
                                android:layout_centerInParent="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone"
                                android:textColor="@android:color/white"
                                android:layout_below="@id/main_phoneImage"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="50dp"
                                android:fontFamily="@font/balooda_semibold"
                                android:elevation="10dp"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="14dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:id="@+id/main_addressButton"
                            android:clickable="true"
                            android:paddingVertical="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/myDarkLight">

                            <ImageView
                                android:id="@+id/main_addressImage"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/adress"
                                android:layout_centerInParent="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:textColor="@android:color/white"
                                android:layout_below="@id/main_addressImage"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="50dp"
                                android:fontFamily="@font/balooda_semibold"
                                android:elevation="10dp"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="14dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:id="@+id/main_emailButton"
                            android:clickable="true"
                            android:paddingVertical="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/myDarkLight">

                            <ImageView
                                android:id="@+id/main_emailImage"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/email"
                                android:layout_centerInParent="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textColor="@android:color/white"
                                android:layout_below="@id/main_emailImage"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="50dp"
                                android:fontFamily="@font/balooda_semibold"
                                android:elevation="10dp"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="14dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:id="@+id/main_websiteButton"
                            android:clickable="true"
                            android:paddingVertical="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/myDarkLight">

                            <ImageView
                                android:id="@+id/main_websiteImage"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/website"
                                android:layout_centerInParent="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Website"
                                android:textColor="@android:color/white"
                                android:layout_below="@id/main_websiteImage"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="50dp"
                                android:fontFamily="@font/balooda_semibold"
                                android:elevation="10dp"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="?attr/actionBarSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="14dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:id="@+id/main_workExpButton"
                            android:clickable="true"
                            android:paddingVertical="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/myDarkLight">

                            <ImageView
                                android:id="@+id/main_workImage"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/workexperience"
                                android:layout_centerInParent="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Work Experience"
                                android:textColor="@android:color/white"
                                android:layout_below="@id/main_workImage"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="50dp"
                                android:fontFamily="@font/balooda_semibold"
                                android:elevation="10dp"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="14dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:paddingVertical="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/myDarkLight">

                            <ImageView
                                android:id="@+id/main_xImage"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/adress"
                                android:layout_centerInParent="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:textColor="@android:color/white"
                                android:layout_below="@id/main_xImage"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="50dp"
                                android:fontFamily="@font/balooda_semibold"
                                android:elevation="10dp"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">

            <com.google.android.material.bottomappbar.BottomAppBar
                android:fadingEdgeLength="30dp"
                android:animateLayoutChanges="true"
                android:elevation="20dp"
                android:id="@+id/main_bottomAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:backgroundTint="@color/toolbarBack"
                app:fabAlignmentMode="center"
                app:fabAttached="true">

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/main_bottomNavigationView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:itemIconTint="@color/myOrange"
                    android:alpha="0.7"
                    android:background="@android:color/transparent"
                    app:itemTextAppearanceInactive="@color/colorOnBackground"
                    app:itemTextAppearanceActive="@color/myOrange"
                    app:labelVisibilityMode="unlabeled"
                    app:menu="@menu/bottom_nav_menu" />

            </com.google.android.material.bottomappbar.BottomAppBar>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/main_addContactButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plus"
                app:layout_anchor="@id/main_bottomAppBar"/>



        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/main_navigationView"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="@color/myDark"
        app:headerLayout="@layout/nav_header"
        android:layout_gravity="start"/>


</androidx.drawerlayout.widget.DrawerLayout>