<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="8dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/myDark"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/notification_typeImageView"
        android:alpha="0.6"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/newcontact"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/notification_typeImageView"
        android:paddingVertical="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Successfully Shared"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:fontFamily="@font/balooda_semibold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notification_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prashant Kumar"
                android:textColor="@color/myOrange"
                android:fontFamily="@font/balooda_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="just Shared you contact"
                android:textColor="@android:color/white"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/balooda_regular"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/notification_timeTextView"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21:36"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/myOrange"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>