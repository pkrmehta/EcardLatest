<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/myDark"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Link Social Media"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:fontFamily="@font/balooda_semibold"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/instagramc1" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:boxBackgroundMode="none"
            app:helperTextTextAppearance="@color/colorAccent"
            android:textColorHint="@color/colorOnBackground">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/social_editInstagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Instagram"
                android:inputType="text"
                android:maxLines="1"
                android:padding="20dp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/colorOnBackgroundSDark"
                android:textSize="15dp"
                app:boxBackgroundColor="@color/myDark" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/facebookc1" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:boxBackgroundMode="none"
            app:helperTextTextAppearance="@color/colorAccent"
            android:textColorHint="@color/colorOnBackground">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/social_editFacebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="facebook"
                android:inputType="text"
                android:maxLines="1"
                android:padding="20dp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/colorOnBackgroundSDark"
                android:textSize="15dp"
                app:boxBackgroundColor="@color/myDark" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/snapchatc1" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:boxBackgroundMode="none"
            app:helperTextTextAppearance="@color/colorAccent"
            android:textColorHint="@color/colorOnBackground">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/social_editSnapchat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="snapchat"
                android:inputType="text"
                android:maxLines="1"
                android:padding="20dp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/colorOnBackgroundSDark"
                android:textSize="15dp"
                app:boxBackgroundColor="@color/myDark" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/linkedinc1" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:boxBackgroundMode="none"
            app:helperTextTextAppearance="@color/colorAccent"
            android:textColorHint="@color/colorOnBackground">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/social_editLinkedin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="linkedin"
                android:inputType="text"
                android:maxLines="1"
                android:padding="20dp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/colorOnBackgroundSDark"
                android:textSize="15dp"
                app:boxBackgroundColor="@color/myDark" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/twitterc1" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:boxBackgroundMode="none"
            app:helperTextTextAppearance="@color/colorAccent"
            android:textColorHint="@color/colorOnBackground">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/social_editTwitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="twitter"
                android:inputType="text"
                android:maxLines="1"
                android:padding="20dp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/colorOnBackgroundSDark"
                android:textSize="15dp"
                app:boxBackgroundColor="@color/myDark" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/popupSocial_cancelButton"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myinfo_layoutback"
            android:text="Cancel"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingVertical="3dp"
            android:fontFamily="@font/balooda_semibold"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/popupSocial_saveButton"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myinfo_layoutback"
            android:text="Save"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingVertical="3dp"
            android:fontFamily="@font/balooda_semibold"
            android:textSize="15dp"/>




    </LinearLayout>


</LinearLayout>